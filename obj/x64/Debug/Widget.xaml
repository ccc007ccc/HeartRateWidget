<Page
    x:Class="HeartRateWidget.Widget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HeartRateWidget"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid x:ConnectionId='2' Background="Transparent"                               >

        <FlyoutBase.AttachedFlyout>
            <Flyout>
                <StackPanel Width="120" Spacing="5">
                    <StackPanel>
                        <TextBlock Text="背景透明度" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <Slider x:ConnectionId='4' x:Name="OpacitySlider"
                                Minimum="0"
                                Maximum="100"
                                StepFrequency="1"
                                                                         />
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="组件缩放" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <Slider x:ConnectionId='3' x:Name="SizeSlider"
                                Minimum="50"  
                                Maximum="200"
                                StepFrequency="1"
                                                                      />
                    </StackPanel>

                </StackPanel>
            </Flyout>
        </FlyoutBase.AttachedFlyout>

        <Viewbox Stretch="Uniform"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center">

            <Grid x:ConnectionId='5' x:Name="ContentGrid"
                  MinWidth="0" MinHeight="0"
                  CornerRadius="12" Padding="0">

                <Grid.Background>
                    <SolidColorBrush x:ConnectionId='6' x:Name="BackgroundBrush" Color="Black" Opacity="0.1"/>
                </Grid.Background>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="5"
                            Padding="15, 10">
                    <TextBlock Text="❤️"
                               FontSize="26"
                               VerticalAlignment="Center" Height="36"/>

                    <TextBlock x:ConnectionId='7' x:Name="HeartRateTextBlock"
                               Text="--"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <TextBlock Text="bpm"
                               FontSize="12"
                               Foreground="Gray"
                               VerticalAlignment="Bottom"
                               Padding="0,0,0,4"/>
                </StackPanel>
            </Grid>
        </Viewbox>
    </Grid>
</Page>

